{
  "name": "ChatMessage",
  "type": "object",
  "properties": {
    "sender_id": {
      "type": "string",
      "description": "ID of the message sender"
    },
    "receiver_id": {
      "type": "string",
      "description": "ID of the message receiver"
    },
    "message": {
      "type": "string",
      "description": "Message content"
    },
    "message_type": {
      "type": "string",
      "enum": [
        "text",
        "image",
        "voice",
        "location"
      ],
      "default": "text",
      "description": "Type of message"
    },
    "is_read": {
      "type": "boolean",
      "default": false,
      "description": "Whether message has been read"
    },
    "conversation_id": {
      "type": "string",
      "description": "Unique conversation ID between two users"
    }
  },
  "required": [
    "sender_id",
    "receiver_id",
    "message",
    "conversation_id"
  ]
}